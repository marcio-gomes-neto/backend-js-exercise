<%- include('include/header') %> 
<%- include('include/nav') %>    

<div class="container">
    <div class="row">
        <div class="col-lg-2">

        </div>

        <div class="col-lg-8 my-3">
            
            <h1 class="text-center">Criar uma nova conta</h1>
            <p class="text-center lead">Crie sua conta e participe da competição!</p>
            
            <%- include('include/messages')%>
                
            <div class="col-lg">
                <h4 class="text-center">Cadastre-se</h4>
                <p class="text-center">Insira seus dados para criar uma nova conta!</p>
                
                <form method="POST" class="">
                    <input type="hidden" name="_csrf" value="<%=csrfTokenSend%>">
                    
                    <div class="form-group">    
                      <label>Seu Email:</label>
                      <input type="email" class="form-control" name="email">
                    </div>

                    <div class="form-group">    
                        <label>Sua senha:</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <div class="form-group">    
                        <label>Seu Nome:</label>
                        <input type="text" class="form-control" name="name">
                      </div>

                    <div class="form-group">    
                        <label>Seu Telefone:</label>
                        <input type="text" class="form-control" name="phone">
                    </div>
                    
                    <button type="submit" class="btn btn-primary my-2">Cadastrar</button>
                  
                </form>
            </div>
            
            </div>

        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('include/footer') %>
