<%- include('include/header') %> 
<%- include('include/nav') %>    

<div class="container">
    <div class="row">
        <div class="col-lg-2">

        </div>

        <div class="col-lg-8 my-3">
            
            <h1 class="text-center">Entrar ou Criar nova conta</h1>
            <p class="text-center lead">Entre com uma conta já existente ou inscreva-se já</p>
            
            <%- include('include/messages')%>
                
                <div class="col-lg">
                    <h4 class="text-center">Entrar</h4>
                    <p class="text-center">Caso Já tenha uma conta, conecte-se por aqui!</p>
                    
                    <form action="login" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfTokenSend%>">
                        
                        <div class="form-group">    
                          <label>Seu Email:</label>
                          <input type="email" class="form-control" name="email">
                        </div>

                        <div class="form-group">    
                            <label>Sua senha:</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        
                        <button type="submit" class="btn btn-primary my-2">Entrar</button>
                      
                    </form>
                </div>
            
            </div>

        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('include/footer') %>
